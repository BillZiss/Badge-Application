@using Magenic.BadgeApplication.Models
@using Magenic.BadgeApplication.Resources
@model AccountInfoIndexViewModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>
                @ApplicationResources.AccountHeader
            </h1>
        </div>
    </div>

    <div class="clearfix"></div>
    <div class="grayLine col-md-12"></div>

    <div class="row">
        <div class="col-md-4">
            @Html.DisplayFor(aiivm => aiivm.AccountInfo, "TotalAccountInfo")
        </div>
        <div id="PayoutSlider" class="col-md-4 grayBox col-md-offset-4">
            @Html.Partial(Mvc.Account.Views.PayoutThreshold, Model.AccountInfo)
        </div>
    </div>

    <div class="row">
        &nbsp;
    </div>

    <div class="row">
        <h2>
            @ApplicationResources.BadgeHistoryHeader
        </h2>
    </div>

    <div class="row">
        <div class="table-responsive">
            @Html.DisplayFor(aiivm => aiivm.EarnedBadges)
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/accountPage")
}