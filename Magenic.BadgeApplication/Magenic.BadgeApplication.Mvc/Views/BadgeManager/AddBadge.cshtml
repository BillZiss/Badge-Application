@using Magenic.BadgeApplication.Resources
@using Magenic.BadgeApplication.Models
@model BadgeEditViewModel

<div class="container">
    <div class="row">
        @Html.Partial("_AdminNavbar")
    </div>
    <div class="row">
        <div class="col-md-12 grayBox">
            <div class="row">
                <div class="col-md-12">
                    <h2>@ApplicationResources.AddBadgeHeader</h2>
                </div>
            </div>
            @using (Html.BeginForm(Mvc.BadgeManager.AddBadgePost()))
            {
                @Html.EditorFor(bevw => bevw.Badge, new { AwardValuesPossible = Model.AwardValuesPossible })
            }
        </div>
    </div>
    <div class="row">
        &nbsp;
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/badgeManager")
}