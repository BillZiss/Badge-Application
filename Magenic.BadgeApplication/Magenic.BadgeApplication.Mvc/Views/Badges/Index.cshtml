@using Magenic.BadgeApplication.Resources
@using Magenic.BadgeApplication.Models
@model BadgeIndexViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8">
            @Html.Partial(Mvc.Badges.Views._CorporateBadgeDisplay, Model)

            <div class="row">
                &nbsp;
            </div>

            @Html.Partial(Mvc.Badges.Views._CommunityBadgeDisplay, Model)
        </div>
        <div class="col-md-4 grayBox">
            @Html.EditorFor(bivm => bivm.NewlySubmittedActivity, new { PossibleActivities = Model.PossibleActivities })
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/badgePage")
}