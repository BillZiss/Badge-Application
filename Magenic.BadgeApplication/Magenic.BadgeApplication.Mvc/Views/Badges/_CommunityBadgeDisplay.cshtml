@using Magenic.BadgeApplication.BusinessLogic.Activity
@using Magenic.BadgeApplication.Resources
@using Magenic.BadgeApplication.Models
@model BadgeIndexViewModel

<div class="row">
    <div class="col-md-10 no-padding">
        <div class="col-sm-8 no-padding">
            <h1>
                @ApplicationResources.CommunityBadgeHeader
            </h1>
        </div>
        <div class="col-sm-4 text-right">
            <a href="#" data-bind="disableClick: showCommunityBadgeAllTab, click: showAllCommunityBadges">@ApplicationResources.ShowAllCommunityBadges</a>
            &nbsp;|&nbsp;
            <a href="#" data-bind="disableClick: showCommunityBadgeEarnedTab, click: showEarnedCommunityBadges">@ApplicationResources.ShowEarnedCommunityBadges</a>
        </div>
    </div>

    <div class="clearfix">&nbsp;</div>
    <div class="grayLine col-md-10">&nbsp;</div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="badges" data-bind="visible: showCommunityBadgeAllTab">
            @Html.Partial(Mvc.Badges.Views._BadgeList, Model.CommunityBadges, new ViewDataDictionary() { { "AllActivities", Model.AllActivities } })
        </div>
        <div data-bind="visible: showCommunityBadgeEarnedTab">
            @Html.Partial(Mvc.Badges.Views._EarnedBadgeList, Model.CommunityEarnedBadges, new ViewDataDictionary() { { "AllActivities", Model.AllActivities } })
        </div>
    </div>
</div>