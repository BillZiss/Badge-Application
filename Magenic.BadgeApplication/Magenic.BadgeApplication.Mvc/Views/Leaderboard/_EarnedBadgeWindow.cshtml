@using Magenic.BadgeApplication.BusinessLogic.Badge
@using Magenic.BadgeApplication.Extensions
@using Magenic.BadgeApplication.Resources
@model EarnedBadgeItem

@{
    var uniqueIdentifier = String.Format("{0}-{1}", Model.AwardDate.ToString("yyyyMMddHHmmss"), Model.Id);
}

<div id="EarnedBadgeWindow-@uniqueIdentifier" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@ApplicationResources.BadgeWindowTitle</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">
                        @Html.DisplayFor(m => m)
                    </div>
                    <div class="col-md-8">
                        @MvcHtmlString.Create(String.Format(ApplicationResources.UnlockedAwardTitle, String.Format("<b>{0}</b>", Model.Name)))
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>
                <div class="row">
                    <div class="col-md-8">
                        @Model.Tagline
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>