@using Magenic.BadgeApplication.BusinessLogic.Activity
@using Magenic.BadgeApplication.Extensions
@model ApproveActivityBadgeItem

@{
    var imagePath = Model.ImagePath;
    if (String.IsNullOrWhiteSpace(imagePath))
    {
        imagePath = Url.Content(Links.Content.Images.unknown_png);
    }
}

<div class="col-md-2">
    <img src="@imagePath" alt="@Model.ImagePath.GetFileNameFromPath()" title="@Model.Name" />
</div>