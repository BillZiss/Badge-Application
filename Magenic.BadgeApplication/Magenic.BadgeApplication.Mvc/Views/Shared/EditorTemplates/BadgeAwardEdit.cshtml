@using Magenic.BadgeApplication.Models
@using Magenic.BadgeApplication.BusinessLogic.PointsReport

@model BadgeAwardEdit
@Html.HiddenFor(bae => bae.Id)
@Html.HiddenFor(bae => bae.EmployeeADName)
<tr>
    <td>
        @Model.BadgeName
    </td>
    <td>
        @Model.AwardDate.ToShortDateString()
    </td>
    <td>
        @Html.DropDownListFor(bae => bae.AwardAmount, new SelectList(ApplicationSettings.BadgeAwardValues()), Model.AwardAmount)
    </td>
</tr>